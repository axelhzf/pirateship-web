.header(ng-controller="HeaderController as h")
  .header-left
    a.brand(ui-sref="home") Pirateship
    form(ng-submit="h.onSubmit()")
      input(type="text", ng-model="h.global.moviesStoreQuery.query", placeholder="Search...", ng-model-options="{debounce: 300}")
      a.input-clear(ng-click="h.clearQuery()", ng-class="{visible: h.global.moviesStoreQuery.query.length > 0}")
        i.ion-ios7-close-outline

  .header-right
    a.icon(ui-sref="movies", ui-sref-active="active") Movies
    a.icon(ui-sref="torrents", ui-sref-active="active") Torrents
    a.icon(ui-sref="downloads", ui-sref-active="active") Downloads
    a.icon(ui-sref="recents", ui-sref-active="active") Recents


